}

html
	height:100%;
	margin 0

body
	border 0px
	margin 0
	font-family: sans-serif;
	font-size 15.4px
	background fondo_gris
	height:100%;


.btn
	font-size 17px
	border-radius 5px
	border 1px solid azul
	background verdoso2
	color white
	font-weight bold
	
.btn_eliminar
	//background red
	color white
	font-size 16px
	font-weight normal
	text-decoration none
	background red
	padding .2em
	margin 1
	
	&:before
		font-family "iconos"
		content "\e61b"	

.btn_editar
	color white
	background azul_btn
	font-size 16px
	font-weight normal
	text-decoration none
	padding  0.2em
	margin 1
	&:before
		font-family "iconos"
		content "\e601"	
		
	
select
	height 32px
	
.titulo_menu
		
		font-size 18px
		font-weight bold
		height 1.7em
		color white
		&.titulo_mesas //hereda de titulo mesas
			background azul_suave
		&.titulo_productos //hereda de titulo mesas
			background gris
		
		
.mesa_disponibilidad
			background verdoso2
			color white
			font-weight bold

//CSS PARA TABLAS
.table_menu
	text-align center
	background verdoso2
	font-weight bold
	width 98.5%
	height 100%
	margin 0.5%
	.table_head
		color white
		
		border 1px solid white
		tr
			th
				height 2em
				font-size 18px
				background gris
				border 1px solid gris
			td
				background verdoso2		
				border 1px solid gris
				font-size 16px
			
	.table_body
		tr
			td
				background white
				border 1px solid gris
				
		.fila_par
			td
				background casi_gris
	


				
.secciones
	margin-left 5%
	width 90%
	height 22%
	border 1px solid black
	
.submenu
	height 30%	
	
.menu
	text-align center
	background white
	height 94%
	margin 0.3%

	&.Menu_Mesas //hereda de menu
		float left
		width 20.4%
		height 94%
	&.Menu_Productos //hereda de menu
		margin-right 0%
		border 1px solid borde_gris
		float left
		width 20.4%	
	&.categoria_productos //hereda de menu
		margin 0.3%
		margin-left 0%
		border 1px solid borde_gris
		float right
		text-align center
		width 78.5%
		height 94%
	
.mapa_mesas
	background white
	margin 0.3%
	margin-left 0%
	border 1px solid borde_gris
	float right
	text-align center
	width 78.5%
	height 94%
	
	table
		tr
			td
				margin 10px
				display: inline-block;
				padding 0.5em
				text-align center
				font-size 50px
				background naranja
				width 100px
				height 100px
				border 4px solid azul
				border-radius 30px
				&:after
					color white
					font-family "iconos"
					content "\e611"	
				
				
				

		
		
